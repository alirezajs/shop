                            <p>شما عضو ویژه هستید بنابراین میتوانید از این دوره استفاده کنید</p>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="card my-4">
                        <div class="card-body">
                            <a href="#">برای مشاهده این دوره نیاز است عضویت ویژه را تهیه کنید</a>
                        </div>
                    </div>
                    <% }
                                } else if(course.type =='cash') { 
                                    if(auth.user.checkLearning(course.id)) { %>
                    <div class="card my-4">
                        <div class="card-body">
                            <p>شما در این دوره ثبت نام کرده اید</p>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="card my-4">
                        <div class="card-body">
                            <p>برای استفاده از این دوره نیاز است این دوره را با مبلغ
                                <%= course.price %> تومان خریداری کنید</p>
                            <form action="/courses/payment" method="post">
                                <input type="hidden" name="course" value="<%= course.id %>">
                                <button type="submit" class="btn clever-btn mb-30 w-100">خرید دوره</button>
                            </form>
                        </div>
                    </div>
                    <% }
                                } else { %>
                    <div class="card my-4">
                        <div class="card-body">
                            <p>این دوره رایگان است</p>
                        </div>
                    </div>
                    <% }
                            } else { %>
                    <div class="card my-4">
                        <div class="card-body">
                            <a href="/auth/login">برای مشاهده این دوره نیاز است ابتدا وارد سایت شوید</a>
                        </div>
                    </div>
                    <% } %>
                    <!-- Widget -->
                    <div class="sidebar-widget">
                        <h4>ویژگی های دوره</h4>
                        <ul class="features-list">
                            <li>
                                <h6><i class="fa fa-clock-o" aria-hidden="true"></i> زمان</h6>
                                <h6>
                                    <%= course.time %>
                                </h6>
                            </li>
                            <li>
                                <h6><i class="fa fa-video-camera" aria-hidden="true"></i> تعداد فصل</h6>
                                <h6>
                                    <%= course.episodes.length %>
                                </h6>
                            </li>
                            <li>
                                <h6><i class="fa fa-users" aria-hidden="true"></i> تعداد شرکت کننده</h6>
                                <h6>
                                    <%= course.episodes.length %>
                                </h6>
                            </li>
                            <li>
                                <h6><i class="fa fa-eye" aria-hidden="true"></i> تعداد بازدید</h6>
                                <h6>
                                    <%= course.viewCount %>
                                </h6>
                            </li>
                        </ul>
                    </div>
                    <!-- Categories Widget -->
                    <div class="card my-4">
                        <h5 class="card-header">دسته بندی ها</h5>
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <ul class="list-unstyled pr-0">
                                        <% categories.forEach(category => { %>
                                        <li>
                                            <a href="/courses?category=<%= category.slug %>">
                                                <%= category.name %></a>
                                            <% if(category.childs) { %>
                                            <ul>
                                                <% category.childs.forEach(cate => { %>
                                                <li>
                                                    <a href="/courses?category=<%= cate.slug %>">
                                                        <%= cate.name %></a>
                                                </li>
                                                <% }) %>
                                            </ul>
                                            <% } %>
                                        </li>
                                        <% }) %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Widget -->
                    <div class="sidebar-widget">
                        <h4>دوره های مرتبط</h4>
                        <% courses.forEach(cour => { %>
                        <!-- Single Courses -->
                        <div class="single--courses d-flex align-items-center">
                            <div class="thumb">
                                <img src="<%= cour.thumb %>" alt="<%= cour.title %>">
                            </div>
                            <div class="content">
                                <h5>
                                    <%= cour.title %>
                                </h5>
                                <h6>
                                    <%= cour.price %>
                                </h6>
                            </div>
                        </div>

                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Courses Content End ##### -->